<% layout('/layouts/boilerplate') %>

    <div class="row mb-4">
        <div class="col-md-8 offset-md-2">
            <h1 class="mt-3 mb-2">Add New Resort</h1>
            <form action="/home" method="post" novalidate class="needs-validation">
                <div class="mt-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" name="title" class="form-control" required>
                </div>

                <div class="mt-3">
                    <label for="description" class="form-label">description</label>
                    <textarea type="textarea" id="description" row="5"  name="description" required class="form-control"></textarea>
                </div>


                <div class="mt-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="text" id-="image" name="image" class="form-control" >
                </div>


                <div class="row">
                    <div class="col-md-4 mt-3">
                        <label for="number" class="form-label">Price</label>
                        <input type="number" id="number" name="price" class="form-control" required>
                    </div>
    
                    <div class="col mt-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" id="location" placeholder="Jaipur" name="location" class="form-control" required>
                    </div>
                </div>

                <div class="mt-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" placeholder="India" id="country class="mt-3"" name="country" class="form-control" required>
                </div>

                <button class="btn mt-4 btn-primary col-sm-3 mt-3 ">Submit</button>


            </form>
        </div>
    </div>

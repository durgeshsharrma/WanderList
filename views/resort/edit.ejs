<% layout('/layouts/boilerplate') %>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mt-3 mb-2 card-title">Edit Resort</h1>
            <form action="/home/<%= resort._id %>?_method=put" method="post" novalidate class="needs-validation">
                <div class="mt-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" name="title" value="<%= resort.title %>" class="form-control" required>
                </div>

                <div class="mt-3">
                    <label for="description" class="form-label">description</label>
                    <textarea type="textarea" id="description" row="5"  name="description" required class="form-control"><%= resort.description %></textarea>
                </div>


                <div class="mt-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="text" id-="image" value="<%= resort.image %>" name="image" class="form-control" >
                </div>


                <div class="row">
                    <div class="col-md-4 mt-3">
                        <label for="number" class="form-label">Price</label>
                        <input type="number" value="<%= resort.price %>" id="number" name="price" class="form-control" required>
                    </div>
    
                    <div class="col mt-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" id="location" value="<%= resort.location %>" placeholder="Jaipur" name="location" class="form-control" required>
                    </div>
                </div>

                <div class="mt-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" value="<%= resort.country %>" placeholder="India" id="country class="mt-3"" name="country" class="form-control" required>
                </div>

                <button class="btn btn-warning mt-3 ">Submit</button>


            </form>
        </div>
    </div>

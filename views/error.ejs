<% layout('/layouts/boilerplate') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded text-center" style="background-color: #f8d7da;">
                <div class="card-body">
                    <h1 class="display-1 text-danger"><i class="fas fa-exclamation-triangle"></i></h1>
                    <h2 class="card-title text-danger">Oops! Something went wrong.</h2>
                    <p class="card-text"><%= message %></p>
                    <a href="/" class="btn btn-primary mt-3">Go Back Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row row-cols-lg-2 row-cols-md-2 row-cols-1 ">

    <a class="card-link left-img-ver-center" >
            <div class="card left-img">
                <img src="https://img.freepik.com/free-vector/world-book-day-landing-page-template_23-2149323894.jpg?w=826&t=st=1727710190~exp=1727710790~hmac=5637ec989771766bbfbed12ceafb3d45cc32f0720bc37116f54baea79062c6c1" style="width: 100%; height: 100%;" alt="">
            </div>
    </a>
    <a class="card-link" >
            <div class="card p-3" style="min-height: 20rem; background-color: #FCFAEE; ">
               <div class="text-center top-img">
                <i class="fa-brands fa-nfc-symbol brand card-img-top"></i>
               </div>
                <form action="" >
                    <h1 class="text-center text-warning mt-3 mb-2 card-title"></h1>
                    <form action="/home" method="post" novalidate class="needs-validation">
                        <div class="mt-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" id="title" name="title" class="form-control" required>
                        </div>
        
                        <div class="mt-3">
                            <label for="description" class="form-label">description</label>
                            <textarea type="textarea" id="description" row="5"  name="description" required class="form-control"></textarea>
                        </div>
        
        
                        <div class="mt-3">
                            <label for="image" class="form-label">Image</label>
                            <input type="text" id-="image" name="image" class="form-control" >
                        </div>
        
        
                        <div class="row">
                            <div class="col-md-4 mt-3">
                                <label for="number" class="form-label">Price</label>
                                <input type="number" id="number" name="price" class="form-control" required>
                            </div>
            
                            <div class="col mt-3">
                                <label for="location" class="form-label">Location</label>
                                <input type="text" id="location" placeholder="Jaipur" name="location" class="form-control" required>
                            </div>
                        </div>
        
                        <div class="mt-3">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" placeholder="India" id="country class="mt-3"" name="country" class="form-control" required>
                        </div>
        
                        <button class="btn mt-4 btn-primary col-sm-3 mt-3 ">Submit</button>
        
        
                    </form>
                </form>

            </div>
        </a>   
    
 </div>
    

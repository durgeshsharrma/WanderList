<%- layout('/layouts/boilerplate') %>


<div class="row login-form mt-4 mb-4 row-cols-lg-2 row-cols-md-2 row-cols-1 ">

    
    
            <div class="card  p-3 offset-md-3" style="min-height: 20rem; background-color: #FCFAEE; ">
               <div class="text-center top-img">
                <i class="fa-brands fa-nfc-symbol brand card-img-top"></i>
               </div>
               
                 
                    <form action="/login" method="post" novalidate class="needs-validation">
                        <div class="mt-3">
                            <label for="title" class="form-label">Username</label>
                            <input type="text" id="title" name="username" class="form-control" required>
                        </div>
        
                        <div class="mt-3">
                            <label for="description" class="form-label">Password</label>
                            <input type="password" id="description"  name="password" required class="form-control">
                        </div>
        
        
        
        
                       
            
        
                        <button class="btn mt-4 btn-primary col-sm-3 mt-3 ">Submit</button>
        
        
                    </form>
                

            </div>
      
    
 </div>
    

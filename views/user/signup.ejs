<%- layout('/layouts/boilerplate') %>





<div class="row mt-5 card-conatiner mb-5 row-cols-lg-2 row-cols-md-2 row-cols-1 ">
    <div class="left-img">
        <img src="Screenshot 2024-09-30 203743.png" alt="Man with Book">
    </div>
    

    <a class="card-link" href="#">
        <div class="card img-form-container p-3" style="min-height: 20rem; background-color: #FCFAEE;">
            <div class="text-center top-img">
                <i class="fa-brands fa-nfc-symbol brand card-img-top fa-3x text-warning"></i>
            </div>
            <form action="/signup" method="post" novalidate class="needs-validation">
                <h1 class="text-center text-warning mt-3 mb-2 card-title">Sign Up</h1>

                <div class="mt-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" name="username" class="form-control" required>
                </div>

                <div class="mt-3">
                    <label for="firstName" class="form-label">First Name</label>
                    <input type="text" id="firstName" name="firstName" class="form-control" required>
                </div>

                <div class="mt-3">
                    <label for="lastName" class="form-label">Last Name</label>
                    <input type="text" id="lastName" name="lastName" required class="form-control">
                </div>

                <div class="mt-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                </div>

                <div class="mt-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>

                <div class="mt-3">
                    <label for="mobileNo" class="form-label">Mobile Number</label>
                    <input type="tel" maxlength="10" id="mobileNo" name="mobileNo" class="form-control" required>
                </div>

                <button class="btn mt-4 btn-primary col-sm-3">Submit</button>
            </form>
        </div>
    </a>

</div>
    
  
